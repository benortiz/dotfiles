set from      = "hello.ben.ortiz@gmail.com"
set realname  = "Ben Ortiz"
set sendmail  = "/home/linuxbrew/.linuxbrew/bin/msmtp -a personal"
set mbox      = "+personal/archive"
set postponed = "+personal/drafts"
set trash			= "+personal/trash"

unmailboxes *
mailboxes "+personal/inbox"
mailboxes "+personal/sent"
mailboxes "+personal/drafts"
mailboxes "+personal/spam"
mailboxes "+personal/archive"
mailboxes "+personal/trash"

macro index,pager gi "<change-folder>=personal/inbox<enter>" "Go to inbox"
macro index,pager ga "<change-folder>=personal/archive<enter>" "Go to all mail"
macro index,pager gs "<change-folder>=personal/spam<enter>" "Go to spam"
macro index,pager gd "<change-folder>=personal/drafts<enter>" "Go to drafts"
macro index,pager gt "<change-folder>=personal/sent<enter>" "Go to sent"
macro index,pager gl "<change-folder>=personal/" "Go to label"

bind index,pager d noop
macro index,pager dd "<save-message>=personal/trash<enter>" "Trash"
macro index,pager y "<save-message>=personal/archive<enter>" "Archive"

