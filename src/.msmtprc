# shared defaults since both are gmail accounts
defaults
host smtp.gmail.com
port 587
protocol smtp
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account personal
from hello.ben.ortiz@gmail.com
user hello.ben.ortiz@gmail.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mailpass.personal.gpg"

account work
from benjamin@bluebottlecoffee.com
user benjamin@bluebottlecoffee.com
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.mailpass.work.gpg"

account default : personal

